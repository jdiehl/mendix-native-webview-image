        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Web View</name>
    <description>Web View for Native Mobile</description>
    <icon/>
    <properties>
        <propertyGroup caption="Source">
            <property key="uri" type="string" required="false">
